{
    "name": "code4romania/website-factory",
    "type": "project",
    "description": "Functional, easy to build website tailored to Romanian town halls.",
    "keywords": [
        "code4romania",
        "website-builder",
        "laravel",
        "tailwindcss"
    ],
    "license": "MPL-2.0",
    "require": {
        "php": "^8.2",
        "ext-imagick": "*",
        "andreiio/blade-remix-icon": "^3.2",
        "archtechx/laravel-seo": "^0.10",
        "blade-ui-kit/blade-icons": "^1.8",
        "embed/embed": "^4.4",
        "guzzlehttp/guzzle": "^7.9",
        "hafael/azure-mailer-driver": "^7.2.0",
        "inertiajs/inertia-laravel": "^2.0",
        "intervention/image-laravel": "^1.5",
        "kalnoy/nestedset": "^6.0",
        "laravel/framework": "^11.34",
        "laravel/tinker": "^2.10",
        "league/flysystem-aws-s3-v3": "^3.29",
        "league/omnipay": "^3.2",
        "maatwebsite/excel": "^3.1",
        "matthewbdaly/laravel-azure-storage": "^2.0",
        "netopia/payment": "^1.1",
        "plank/laravel-mediable": "^6.3",
        "sentry/sentry-laravel": "^4.13",
        "spatie/laravel-responsecache": "^7.6",
        "spatie/laravel-translatable": "^6.11",
        "spatie/laravel-translation-loader": "^2.8",
        "symfony/http-client": "^7.2",
        "symfony/yaml": "^7.1",
        "tightenco/ziggy": "^2.5"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.15",
        "barryvdh/laravel-ide-helper": "^3.5",
        "fakerphp/faker": "^1.24",
        "friendsofphp/php-cs-fixer": "^3.73",
        "itsgoingd/clockwork": "^5.3",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.7",
        "phpunit/phpunit": "^11.5",
        "spatie/laravel-ignition": "^2.9"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models --nowrite"
        ],
        "test": "@php artisan test"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
